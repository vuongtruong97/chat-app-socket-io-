<div class='container'>
    <div class='row d-flex justify-content-center mt-5 mb-5'>
        <div class='col-11 col-md-9 col-sm-11'>
            <form action='/users/chat' method='get'>
                <div class='form-group'>
                    <label for='username'>Nick name</label>
                    <input name='username' type='text' class='form-control' id='username' placeholder='Enter name' />
                    <small id='emailHelp' class='form-text text-muted'>Your nick-name in chat-room</small>
                </div>
                <div class='form-group'>
                    <label for='room'>Room</label>
                    <input name='room' type='text' class='form-control' id='room' placeholder='Room name' />
                </div>
                <button type='submit' class='btn btn-primary'>Submit</button>
            </form></div>
    </div>
</div>